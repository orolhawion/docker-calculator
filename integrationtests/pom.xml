<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>docker-calculator</artifactId>
        <groupId>de.akquinet.ats.ccsp</groupId>
        <version>1.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>integrationtests</artifactId>
    <name>Docker Calculator - Integrationtests</name>

    <properties>
        <mysql.db>calculator_it</mysql.db>
        <mysql.user>calculator</mysql.user>
        <mysql.password>calculator,02</mysql.password>
        <mysql.port.public>3306</mysql.port.public>
        <mysql.port.exposed>3306</mysql.port.exposed>
        <mysql.jdbc.url>jdbc:mysql://localhost:${mysql.port.public}/${mysql.db}?useSSL=false</mysql.jdbc.url>
    </properties>

    <dependencies>

        <dependency>
            <groupId>de.akquinet.ats.ccsp</groupId>
            <artifactId>docker-calculator-backend</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>it</id>
            <properties>
                <eap.home>${project.build.directory}/jboss-eap-7.1.1.GA/</eap.home>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                        <executions>
                            <execution>
                                <id>surefire-it</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <trimStackTrace>false</trimStackTrace>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run integration-tests</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>

                        <configuration>
                            <images>
                                <image>
                                    <name>mysql:5.7</name>
                                    <alias>calculator_it_mysql</alias>

                                    <run>
                                        <namingStrategy>alias</namingStrategy>

                                        <ports>
                                            <port>${mysql.port.public}:${mysql.port.exposed}</port>
                                        </ports>

                                        <wait>
                                            <tcp>
                                                <host>localhost</host>
                                                <mode>mapped</mode>
                                                <ports>
                                                    <port>${mysql.port.exposed}</port>
                                                </ports>
                                            </tcp>
                                            <time>10000</time>
                                        </wait>

                                        <env>
                                            <MYSQL_RANDOM_ROOT_PASSWORD>yes</MYSQL_RANDOM_ROOT_PASSWORD>
                                            <MYSQL_DATABASE>${mysql.db}</MYSQL_DATABASE>
                                            <MYSQL_USER>${mysql.user}</MYSQL_USER>
                                            <MYSQL_PASSWORD>${mysql.password}</MYSQL_PASSWORD>
                                        </env>
                                    </run>
                                </image>
                            </images>

                            <verbose>true</verbose>
                        </configuration>

                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>

                                <goals>
                                    <goal>build</goal>
                                    <goal>start</goal>
                                </goals>
                            </execution>

                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>

                                <goals>
                                    <goal>stop</goal>
                                    <goal>remove</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-config</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${eap.home}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.build.directory}/../jboss-config/</directory>
                                            <filtering>true</filtering>
                                            <includes>
                                                <include>**/*.cli</include> <!-- Config scripts -->
                                                <include>**/*.xml</include> <!-- Module configuration -->
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <!-- get eap and extract -->
                            <execution>
                                <id>unpack-jboss</id>
                                <goals>
                                    <goal>unpack-dependencies</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <includeArtifactIds>jboss-eap</includeArtifactIds>
                                    <outputDirectory>${project.build.directory}/</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-jdbc-driver</id>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <includeArtifactIds>mysql-connector-java</includeArtifactIds>
                                    <outputDirectory>${eap.home}/modules/com/mysql/main</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <configuration>
                            <jboss-home>${eap.home}</jboss-home>
                            <serverConfig>standalone.xml</serverConfig>

                            <server-args>
                                <server-arg>-Dmysql.jdbc.url=${mysql.jdbc.url}</server-arg>
                                <server-arg>-Dmysql.user=${mysql.user}</server-arg>
                                <server-arg>-Dmysql.passwd=${mysql.password}</server-arg>
                                <server-arg>-Duser.country=DE -Duser.language=de</server-arg>
                            </server-args>

                            <javaOpts>${argLine}</javaOpts>

                        </configuration>

                        <executions>
                            <execution>
                                <id>start-server-config</id>
                                <phase>pre-integration-test</phase>

                                <goals>
                                    <goal>start</goal>
                                    <goal>execute-commands</goal>
                                    <goal>shutdown</goal>
                                </goals>

                                <configuration>
                                    <batch>true</batch>
                                    <execute-commands>
                                        <scripts>
                                            <script>${eap.home}/standalone/configuration/configure-datasource.cli</script>
                                            <script>${eap.home}/standalone/configuration/deployment-scanner.cli</script>
                                        </scripts>
                                    </execute-commands>
                                </configuration>
                            </execution>

                            <!-- EAP startup and webapp deployment for IT -->
                            <execution>
                                <id>deploy-app-on-wildfly</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start</goal>
                                    <goal>deploy-artifact</goal>
                                </goals>
                                <configuration>
                                    <groupId>de.akquinet.ats.ccsp</groupId>
                                    <artifactId>docker-calculator-war</artifactId>
                                </configuration>
                            </execution>

                            <execution>
                                <id>stop-wildfly</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>shutdown</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>it-with-docker</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <trimStackTrace>false</trimStackTrace>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run integration-tests</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>

                        <configuration>
                            <images>
                                <image>
                                    <name>akquinet-ats-ccsp/docker-calculator-wildfly:${project.version}</name>
                                    <alias>docker_calculator_wildfly</alias>
                                    <run>
                                        <namingStrategy>alias</namingStrategy>
                                        <ports>
                                            <port>8080:8080</port>
                                        </ports>

                                        <wait>
                                            <time>10000</time>
                                        </wait>
                                    </run>
                                </image>
                            </images>

                            <verbose>true</verbose>
                        </configuration>

                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>

                                <goals>
                                    <goal>build</goal>
                                    <goal>start</goal>
                                </goals>
                            </execution>

                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>

                                <goals>
                                    <goal>stop</goal>
                                    <goal>remove</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <excludeDefaultDirectories>true</excludeDefaultDirectories>
                    <filesets>
                        <fileset>
                            <directory>target</directory>
                            <includes>
                                <include>**</include>
                            </includes>
                            <excludes>
                                <!-- Preserve JBoss on normal builds,
                                does not require you to build wildfly with profile it again -->
                                <exclude>jboss*/**</exclude>
                            </excludes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>